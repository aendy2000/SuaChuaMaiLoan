<!-- Product -->
<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div class="p-b-40 ">
            <h3 class="ltext-103 cl5">
                Sản phẩm mới
            </h3>
        </div>

        <div class="row isotope-grid">

            @foreach (var item in Model)
            {
                if (i >= 16)
                {
                    i = 1;
                }
                else
                {
                    i++;
                }

                <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item @item.ID_Flavour Categories@(item.ID_Categories)">
                    <!-- Block2 -->

                    <div class="block2">
                        @if (item.Sale != 0)
                        {
                            <div class="block2-pic hov-img0 label-new" data-label="-@item.Sale %">
                                @if (i > 9)
                                {
                                    <img src="@Url.Content("~/Content/images/product-" + i + ".jpg")" alt="IMG-PRODUCT">
                                }
                                else
                                {
                                    <img src="@Url.Content("~/Content/images/product-0" + i + ".jpg")" alt="IMG-PRODUCT">
                                }
                                <a name="@item.ID" href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                                    Xem Chi Tiết
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="block2-pic hov-img0">
                                @if (i > 9)
                                {
                                    <img src="@Url.Content("~/Content/images/product-" + i + ".jpg")" alt="IMG-PRODUCT">
                                }
                                else
                                {
                                    <img src="@Url.Content("~/Content/images/product-0" + i + ".jpg")" alt="IMG-PRODUCT">
                                }
                                <a name="@item.ID" href="#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                                    Xem Chi Tiết
                                </a>
                            </div>
                        }

                        <div class="block2-txt flex-w flex-t p-t-14">
                            <div class="block2-txt-child1 flex-col-l ">
                                <a name="@item.ID" href="#" class="stext-103 cl4 hov-cl1 trans-04 js-name-b2 p-b-6  js-show-modal1">
                                    @item.Name
                                </a>

                                @if (item.Sale != 0)
                                {
                                    <span class="stext-105 cl3">
                                        <span style=" text-decoration: line-through #ff0000;">@item.Price đ</span>
                                        &nbsp;@((Convert.ToDecimal(item.Price.Replace(".", "")) - ((Convert.ToDecimal(item.Price.Replace(".", "")) * item.Sale) / 100)).ToString("0,0")) đ
                                    </span>
                                }
                                else
                                {
                                    <span class="stext-105 cl3">
                                        @item.Price đ
                                    </span>
                                }

                            </div>
                            <div class="block2-txt-child2 flex-r p-t-3">
                                <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                    <img class="icon-heart1 dis-block trans-04" src="@Url.Content("~/Content/images/icons/icon-heart-01.png")" alt="ICON">
                                    <img class="icon-heart2 dis-block trans-04 ab-t-l" src="@Url.Content("~/Content/images/icons/icon-heart-02.png")" alt="ICON">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Load more -->
        <div class="flex-c-m flex-w w-full p-t-45">
            <a href="@Url.Action("Product", "Home")" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                Xem Thêm
            </a>
        </div>
    </div>
</section>

